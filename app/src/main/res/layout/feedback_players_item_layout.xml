<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/playersLayoutHolder"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="3dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        android:elevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="6dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/player_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                tools:src="@drawable/person_avatar"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="1dp"
                android:layout_centerVertical="true"/>

            <CheckBox
                android:id="@+id/attendanceCheckBox"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:visibility="gone"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true" />

            <TextView
                android:id="@+id/playerNameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Michael Jordan"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/player_img"
                android:layout_marginLeft="16dp"
                android:maxLines="1"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>